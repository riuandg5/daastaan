<% include ./partials/header %>
<div class="navbar">
    <a class="nav-left" href="/posts" title="Goto home">Home</a>
    <% if(currentUser){ %>
        <a class="nav-right" href="/admin/<%= currentUser._id %>/profile" title="See profile"><%= currentUser.username %></a>
    <% } %>
</div>
<div class="form-container">
    <form action="/admin/<%= currentUser._id %>/profile/update?_method=PUT" method="POST">
        <div class="field">
            <input type="text" value="<%= currentUser.username %>" readonly>
        </div>
        <div class="field">
            <input type="text" name="info[dplink]" value="<%= currentUser.dplink %>" autocomplete="off" required>
        </div>
        <div class="field">
            <textarea name="info[bio]" autocomplete="off" required><%= currentUser.bio %></textarea>
        </div>
        <input type="submit" value="UpdateInfo">
        <a href="/admin/<%= currentUser._id %>/profile"><div>Cancel</div></a>
    </form>
</div>
<% include ./partials/footer %>